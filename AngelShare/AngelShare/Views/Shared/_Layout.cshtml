<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <h1 id="header" class="navbar-text h1">ASP.NET Project</h1>
    </div>

    <div id="main" class="row panel">
        <div class="col-xs-2 well">
            <ul>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Home", "Index", "Home")</li>
                @*<li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Shop", "Index", "Shop")</li>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Cart", "Index", "Cart")</li>
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Login", "Index", "Login")</li>*@
                <li class="btn btn-block btn-default btn-lg">@Html.ActionLink("Register", "Index", "Registrations")</li>
                @*<li class="btn btn-block btn-default btn-lg">@Html.ActionLink("View Customers", "Index", "Customers")</li>*@
            </ul>
        </div>

        <div class="col-xs-9">
            @RenderBody()
            <hr />
        </div>

    </div>
    <div>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>